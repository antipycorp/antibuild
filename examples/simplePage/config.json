{
  "logging": {
    "file": "abm.log",
    "pretty_print": true,
    "enable_debug": true
  },
  "folders": {
    "templates": "templates/",
    "static": "static/",
    "output": "public/",
    "modules": ".modules/"
  },
  "modules": {
    "dependencies": {
      "file": "https://build.antipy.com/dl/modules.json@internal",
      "json": "https://build.antipy.com/dl/modules.json@internal",
      "language": "https://build.antipy.com/dl/modules.json@internal",
      "util": "https://build.antipy.com/dl/modules.json@internal",
      "yaml": "https://build.antipy.com/dl/modules.json@internal"
    },
    "config": {
      "language": {
        "default": "en",
        "languages": ["en", "nl"]
      }
    },
    "spps": ["language_language"]
  },
  "pages": {
    "templates": ["layout.html", "components/navbar.html"],
    "data": ["[file_file:data/layout.json][json_json]"],
    "sites": [
      {
        "slug": "/index.html",
        "templates": ["home.html"],
        "data": [
          "[file_file:data/home.yaml][yaml_yaml]",
          "[file_file:data/test.yaml][yaml_yaml][util_prefix:test]"
        ]
      }
    ]
  }
}
