{
  "logging": {
    "file": "abm.log",
    "pretty_print": true,
    "enable_debug": true
  },
  "folders": {
    "templates": "templates/",
    "static": "static/",
    "output": "public/",
    "modules": ".modules/"
  },
  "modules": {
    "dependencies": {
      "file": "build.antipy.com/std@v0.13.0",
      "json": "build.antipy.com/std@v0.13.0",
      "language": "build.antipy.com/std@v0.13.0",
      "util": "build.antipy.com/std@v0.13.0",
      "yaml": "build.antipy.com/std@v0.13.0"
    },
    "config": {
      "language": {
        "default": "en",
        "languages": [
          "en",
          "nl"
        ]
      }
    },
    "spps": [
      "language_language"
    ]
  },
  "pages": {
    "templates": [
      "layout.html",
      "components/navbar.html"
    ],
    "data": [
      "[file_file:data/layout.json][json_json]"
    ],
    "sites": [
      {
        "slug": "/index.html",
        "templates": [
          "home.html"
        ],
        "data": [
          "[file_file:data/home.yaml][yaml_yaml]",
          "[file_file:data/test.yaml][yaml_yaml][util_prefix:test]"
        ]
      }
    ]
  }
}
