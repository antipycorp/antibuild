{
  "logging": {
    "file": "antibuild.log",
    "pretty_print": true,
    "enable_debug": true
  },
  "folders": {
    "templates": "templates/",
    "static": "static/",
    "output": "public/",
    "modules": ".modules/"
  },
  "modules": {
    "dependencies": {
      "file": "https://build.antipy.com/dl/modules.json",
      "markdown": "https://build.antipy.com/dl/modules.json",
      "yaml": "https://build.antipy.com/dl/modules.json",
      "util": "https://build.antipy.com/dl/modules.json"
    }
  },
  "pages": {
	"slug": "",
	"templates": ["layout.html"],
	"sites": [
		{
			"slug": "/index.html",
			"templates": ["home.html"]
		  },
		{
		"iterators": {
			"article": "[file_all:data/articles]",
			"author": "[file_all:data/authors]"
		},
		"slug": "/articles/index.html",
		"templates": ["articles.html"],
		"data": [
			"[range:article][file_file:data/articles/{{article}}/meta.yaml][yaml_yaml][util_prefix:{{article}}][util_prefix:articles]",
			"[range:author][file_file:data/authors/{{author}}/meta.yaml][yaml_yaml][util_prefix:{{author}}][util_prefix:authors]"
		]
	  },
	  {
		"iterators": {
			"article": "[file_all:data/articles]",
			"author": "[file_all:data/authors]"
		},
		"slug": "/authors/index.html",
		"templates": ["authors.html"],
		"data": [
			"[range:article][file_file:data/articles/{{article}}/meta.yaml][yaml_yaml][util_prefix:{{article}}][util_prefix:articles]",
			"[range:author][file_file:data/authors/{{author}}/meta.yaml][yaml_yaml][util_prefix:{{author}}][util_prefix:authors]"
		]
	  },
	  {
		"iterators": {
			"article": "[file_all:data/articles]",
			"author": "[file_all:data/authors]"
		},
		"slug": "/articles/{{article}}/index.html",
		"templates": ["article.html"],
		"data": [
			"[file_file:data/articles/{{article}}/meta.yaml][yaml_yaml][util_prefix:article]",
			"[file_file:data/articles/{{article}}/article.md][markdown_read:article_content]",
			"[range:author][file_file:data/authors/{{author}}/meta.yaml][yaml_yaml][util_prefix:{{author}}][util_prefix:authors]"
		]
	  },
	  {
		"iterators": {
			"article": "[file_all:data/articles]",
			"author": "[file_all:data/authors]"
		},
		"slug": "/authors/{{author}}/index.html",
		"templates": ["author.html"],
		"data": [
			"[file_file:data/authors/{{author}}/meta.yaml][yaml_yaml][util_prefix:author]",
			"[range:article][file_file:data/articles/{{article}}/meta.yaml][yaml_yaml][util_prefix:{{article}}][util_prefix:articles]"
		]
	  }
	]
  }
}
