{
  "logging": {
    "file": "antibuild.log",
    "pretty_print": false
  },
  "folders": {
    "templates": "templates/",
    "static": "static/",
    "output": "public/",
    "modules": ".modules/"
  },
  "modules": {
    "dependencies": {
      "file": "https://build.antipy.com/dl/modules.json",
      "yaml": "https://build.antipy.com/dl/modules.json"
    }
  },
  "pages": {
    "sites": [
      {
        "slug": "/",
        "templates": ["layout.html"],
        "sites": [
          {
            "iterators": {
              "article": "[file_iterator:data/articles]"
            },
            "slug": "/article/{{article}}",
            "data": [
              "[file_file:data/articles/{{article}}/meta.yaml][yaml_yaml]"
            ],
            "sites": [
              {
                "slug": "/index.html",
                "templates": ["article.html"]
              },
              {
                "iterators": {
                  "comment": "[file_iterator:data/articles/{{article}}/comments]"
                },
                "slug": "/comment/{{comment}}/index.html",
                "templates": ["article_comment.html"],
                "data": [
                  "[file_file:data/articles/{{article}}/comments/{{comment}}.yaml][yaml_yaml]"
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
